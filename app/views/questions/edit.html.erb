<h1>Edit Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Modification Guidelines</p>
    <ul>
      <li>Tell me what you want.</li>
      <li>What you really, really want.</li>
      <li>Body language is encouraged, but at the same time is completely ineffective.</li>
    </ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control', placeholder: "Enter question title" %>
      </div>
      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
      </div>
      <div class="form-group">
        <%= f.label :resolved %>
        <%= f.check_box :resolved, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
