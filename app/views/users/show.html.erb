<div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <!-- # call 'av.._url' to fetch avatar of current user -->
       <% avatar_url = @user.avatar_url(128) %>
       <% if avatar_url %>
         <div class="media-left">
           <!-- # create 'img' using Rails' 'image_tag' method -->
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= @user.name %></h2>
         <small>
           <%= pluralize(@user.posts.count, 'post') %>,
           <%= pluralize(@user.comments.count, 'comment') %>
         </small>
       </div>
     </div>
   </div>
 </div>

 <!-- # use partials to display all posts and comments of current user -->
 <h2>Posts</h2>
 <%= render @user.posts %>

 <h2>Comments</h2>
 <%= render @user.comments %>
